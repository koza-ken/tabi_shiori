<turbo-frame id="spot-edit-modal">
  <div class="relative z-20 w-full max-w-2xl max-h-screen overflow-y-auto bg-bg rounded-md">
    <main class="flex flex-col justify-center px-8 py-12 bg-main-bg">
      <h1 class="text-2xl font-bold text-primary mb-8"><%= t('spots.edit.title') %></h1>

      <%= form_with model: @spot, url: card_spot_path(@card, @spot), local: true, class: "w-full max-w-md" do |f| %>
        <% if @spot.errors.any? %>
          <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
            <h2 class="text-sm font-semibold text-red-800 mb-2">
              <%= t('errors.messages.not_saved', count: @spot.errors.count, resource: t('activerecord.models.spot')) %>
            </h2>
            <ul class="list-disc list-inside text-sm text-red-700">
              <% @spot.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-6">
          <%= f.label :name, t('spots.form.name'), class: "block text-sm font-medium text-text mb-2" %>
          <%= f.text_field :name,
              placeholder: t('spots.form.name_placeholder'),
              class: "form-text-field" %>
        </div>

        <div class="mb-6">
          <%= f.label :category, t('spots.form.category'), class: "block text-sm font-medium text-text mb-2" %>
          <%= f.collection_select :category_id, @categories, :id, :name,
              {include_blank: "--- 選択してください ---"},
              {class: "form-text-field"} %>
        </div>

        <div class="mb-6">
          <%= f.label :address, t('spots.form.address'), class: "block text-sm font-medium text-text mb-2" %>
          <%= f.text_field :address,
              placeholder: t('spots.form.address_placeholder'),
              class: "form-text-field" %>
        </div>

        <div class="mb-6">
          <%= f.label :website_url, t('spots.form.website_url'), class: "block text-sm font-medium text-text mb-2" %>
          <%= f.text_field :website_url,
              placeholder: t('spots.form.web_site_url_placeholder'),
              class: "form-text-field" %>
        </div>

        <div class="mb-6">
          <%= f.label :phone_number, t('spots.form.phone_number'), class: "block text-sm font-medium text-text mb-2" %>
          <%= f.text_field :phone_number,
              placeholder: t('spots.form.phone_number_placeholder'),
              class: "form-text-field" %>
        </div>

        <div class="flex gap-3">
          <%= f.submit t('spots.form.update'), class: "btn-main flex-1" %>
          <%= link_to t('cards.form.cancel'), card_spot_path(@card), class: "btn-sub flex-1 text-center" %>
        </div>
      <% end %>
    </main>
  </div>
</turbo-frame>
